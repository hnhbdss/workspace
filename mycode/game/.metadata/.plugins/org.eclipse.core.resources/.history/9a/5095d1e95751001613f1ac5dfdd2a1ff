package com.demo.match;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.net.ServerSocket;
import java.net.Socket;

public class Server {

	private Thread acceptThread = null;
	private Thread[] clientThreads = null;
	
	public void open(final int port) {
		
		acceptThread = new Thread() {
			public void run() {
				ServerSocket server = null;
				try {
					server =  new ServerSocket(port);
					Socket client = server.accept();
					Server.this.accept(client);
				}
				catch(IOException e) {
					throw new VisiableException(e);
				}
				finally {
					if (server != null) {
						try {
							server.close();
						}
						catch(Exception e) {
							System.out.println(e);
						}
					}
				}
			}
		};
		acceptThread.start();
	}

	public void close() {
		if (acceptThread != null) {
			acceptThread.interrupt();
		}
	}
	
	private void accept(Socket client) throws VisiableException {
		try { 
			BufferedReaderreader = new BufferedReader(new InputStreamReader(client.getInputStream()));
		}
		catch(Exception e) {
			throw new VisiableException(e);
		}
	}
}
